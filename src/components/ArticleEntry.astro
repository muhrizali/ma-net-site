---
interface Props {
    title: string;
    link: string;
}
const { title, link } = Astro.props;
---
<a href={link}>
    <article class="flex flex-row gap-1 border-2 border-base-20 p-1 rounded-xs shadow-xs">
        <div id="image-banner" class="min-w-30 h-20 bg-primary-30 rounded-xs"></div>
        <div class="grow px-2 py-1 h-20">
            <h5>{title}</h5>
            <small class="text-base-40 line-clamp-2">
                <p>
                    <slot />
                </p>
            </small>
        </div>
    </article>
</a>
